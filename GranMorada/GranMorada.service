[Unit]
Description=Start GranMorada Service
After=multi-user.target

[Service]
Type=idle
ExecStart=/usr/bin/sudo /usr/bin/mono /home/pi/Documents/GranMorada/GranMorada/bin/Debug/GranMorada.exe /home/pi/Documents/GranMorada/GranMorada/bin/Debug > /home/pi/GranMorada.log 2>&1

[Install]
WantedBy=multi-user.target